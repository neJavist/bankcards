<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
    <changeSet id="1753341933882-1" author="nejavist">
        <createTable tableName="role" schemaName="bankcards">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_role_user"
                             references="bankcards.users(id)"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1753338208718-1" author="nejavist">
        <insert tableName="role" schemaName="bankcards">
            <column name="id" valueNumeric="1"/>
            <column name="name" value="ROLE_USER"/>
            <column name="user_id" valueNumeric="1"/>
        </insert>
        <insert tableName="role" schemaName="bankcards">
            <column name="id" valueNumeric="2"/>
            <column name="name" value="ROLE_ADMIN"/>
            <column name="user_id" valueNumeric="2"/>
        </insert>
    </changeSet>
</databaseChangeLog>