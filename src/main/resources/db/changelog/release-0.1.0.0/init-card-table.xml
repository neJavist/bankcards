<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
    <changeSet id="1753342035184-1" author="nejavist">
        <createTable tableName="card" schemaName="bankcards">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_card_user"
                             references="bankcards.users(id)"/>
            </column>
            <column name="card_number" type="VARCHAR(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="balance" type="NUMERIC">
                <constraints nullable="false"/>
            </column>
            <column name="expiry_date" type="VARCHAR(7)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1753338344873-1" author="nejavist">
        <insert tableName="card" schemaName="bankcards">
            <column name="id" valueNumeric="1"/>
            <column name="user_id" valueNumeric="1"/>
            <column name="card_number" value="1111-2222-3333-4444"/>
            <column name="status" value="ACTIVE"/>
            <column name="balance" valueNumeric="1000"/>
            <column name="expiry_date" value="2026-05"/>
        </insert>
        <insert tableName="card" schemaName="bankcards">
            <column name="id" valueNumeric="2"/>
