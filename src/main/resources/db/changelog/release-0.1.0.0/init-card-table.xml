            <column name="card_number" value="5555-6666-7777-8888"/>
            <column name="status" value="BLOCKED"/>
            <column name="balance" valueNumeric="5000"/>
            <column name="expiry_date" value="2028-11"/>
        </insert>
    </changeSet>
    <changeSet id="1753469632685-1" author="nejavist">
        <insert tableName="card" schemaName="bankcards">
            <column name="id" valueNumeric="3"/>
            <column name="user_id" valueNumeric="1"/>
            <column name="card_number" value="2222-2222-2222-2222"/>
            <column name="status" value="ACTIVE"/>
            <column name="balance" valueNumeric="1000"/>
            <column name="expiry_date" value="2027-05"/>
        </insert>
    </changeSet>
</databaseChangeLog>